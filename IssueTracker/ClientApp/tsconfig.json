{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "ES2015",
      "ES2015.Core",
      "dom"
    ],
    "skipLibCheck": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
